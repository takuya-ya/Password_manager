#!/bin/bash

choice=0
while [ "$choice" != 'Exit' ]
do

echo "パスワードマネージャーへようこそ！"
echo "次の選択肢から入力してください(Add Password/Get Password/Exit):"
read choice


 if [ "$choice" = "Add Password" ]; then
 echo "サービス名を入力してください:"
 read service
 echo "ユーザー名を入力してください:"
 read usr
 echo "パスワードを入力してください:"
 read pass
  
  if [ "$service" ] && [ "$usr" ] && [ "&pass" ]; then
  echo 
  echo "パスワードの追加は成功しました"
  echo
  
  fi
 fi
 
 done 
 